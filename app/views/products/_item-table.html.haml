%table.item-table
  %tbody
    %tr
      %th 出品者
      %td
        = link_to "山田 太郎", 'hoge'
        .item-table__rating
          .item-table__rating-good
            %i.fas.fa-laugh
            %span 999
          .item-table__rating-normal
            %i.fas.fa-meh
            %span 99
          .item-table__rating-bad
            %i.fas.fa-frown
            %span 9
    %tr
      %th カテゴリー
      %td
        =link_to "", class: '' do
          %p.item-table__category-parent レディース
        =link_to "", class: '' do
          %p.item-table__category-child バッグ
        =link_to "", class: '' do
          %p.item-table__category-child トートバッグ
    %tr
      %th ブランド
      %td
        =link_to "",class: '' do
          %p.parent Pachi-Mon
    %tr
      %th 商品の状態
      %td
        = product.condition
    %tr
      %th 配送料の負担
      %td
        = product.shipping_fee
    %tr
      %th 配送の方法
      %td
        = product.shipping_method
    %tr
      %th 配送元地域
      %td
        =link_to do
          = product.shipping_from
    %tr
      %th 発送日の目安
      %td
        = product.shipping_term
